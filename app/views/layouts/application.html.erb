<!DOCTYPE html>
<html>
  <head>
    <title>Marios</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Mario's Depot</h1>
        <nav>
          <%= link_to "Home", root_path%> ||
          <%= link_to "Product Catalog", products_path%>
        </nav>
      </div>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
