<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user, class: "form-control" %>
  <%= f.label :comment %>
  <%= f.text_field :comment, class: "form-control" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, class: "form-control" %><br>
  <p><%= f.submit class: "btn btn-secondary" %></p>
<% end %>
